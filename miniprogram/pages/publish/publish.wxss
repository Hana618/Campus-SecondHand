/* 发布商品页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 50rpx;
}

/* 顶部导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-right {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-btn {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background-color: transparent;
  display: inline-block;
  min-width: 80rpx;
  text-align: center;
}

.nav-btn:active {
  background-color: #07c160;
  color: #fff;
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

/* 图片上传区域样式 */
.upload-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.upload-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.upload-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f0f2f5;
}

.upload-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d9d9d9;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 表单样式 */
.form-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.form-picker {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 10rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 价格输入样式 */
.price-input-container {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 10rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #333;
  margin-right: 10rpx;
}

.price-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.price-unit {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 商品成色选择样式 */
.condition-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.condition-item {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #fff;
}

.condition-item.active {
  border-color: #07c160;
  color: #07c160;
  background-color: #f0f9eb;
}

/* 商品描述样式 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 48rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 10rpx;
  box-sizing: border-box;
}

.textarea-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 15rpx;
}

/* 占位符样式 */
.placeholder {
  color: #999;
}
