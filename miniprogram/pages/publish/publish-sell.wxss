/* 出物发布页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-left,
.nav-right {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-btn {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  flex: 1;
  overflow-y: auto;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

/* 区块标题 */
.section-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 区块提示 */
.section-hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 图片上传容器 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

/* 上传项 */
.upload-item {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.upload-item image {
  width: 100%;
  height: 100%;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 44rpx;
  border-radius: 0 0 0 8rpx;
}

/* 添加图片 */
.upload-add {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  font-size: 72rpx;
  color: #ddd;
  display: block;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 输入框 */
.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

/* 价格容器 */
.price-container {
  display: flex;
  align-items: center;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.price-symbol {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
  margin-right: 10rpx;
}

.price-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

/* 文本域 */
.textarea-field {
  width: 100%;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  min-height: 200rpx;
  max-height: 400rpx;
}

.textarea-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: right;
  display: block;
}

/* 选择器容器 */
.picker-container {
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-item {
  font-size: 28rpx;
  color: #333;
}

/* 位置容器 */
.location-container {
  display: flex;
  align-items: center;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.location-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.location-btn {
  width: 120rpx;
  height: 56rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 28rpx;
}

/* 联系方式容器 */
.contact-container {
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.contact-item {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  margin-right: 40rpx;
  width: 120rpx;
}

.contact-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}
