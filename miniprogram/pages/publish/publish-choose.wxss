/* 需求选择页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-left,
.nav-right {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-btn {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
}

/* 选择容器 */
.choose-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

/* 选择项 */
.choose-item {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.choose-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 选择项图标 */
.item-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

/* 选择项文字 */
.item-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 选择项描述 */
.item-desc {
  font-size: 24rpx;
  color: #999;
}
