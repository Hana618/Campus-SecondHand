/* 商品详情页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 商品图片轮播样式 */
.swiper-container {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
}

.swiper-container swiper {
  width: 100%;
  height: 100%;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}

/* 商品基本信息样式 */
.goods-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-title {
  font-size: 32rpx;
  color: #333;
  line-height: 48rpx;
  margin-bottom: 20rpx;
  display: block;
}

.goods-price {
  font-size: 44rpx;
  color: #ff4757;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.goods-meta {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 26rpx;
  color: #999;
}

.meta-label {
  margin-right: 10rpx;
}

.meta-value {
  color: #666;
}

/* 商品详情描述样式 */
.goods-detail {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-content {
  padding: 0 10rpx;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
  display: block;
  margin-bottom: 20rpx;
}

/* 发布者信息样式 */
.publisher-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.publisher-card {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.publisher-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}

.publisher-avatar image {
  width: 100%;
  height: 100%;
}

.publisher-meta {
  flex: 1;
}

.publisher-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.publisher-stats {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.contact-btn {
  border-radius: 40rpx !important;
  padding: 0 40rpx !important;
  font-size: 26rpx !important;
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.bar-left {
  display: flex;
  align-items: center;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}

.bar-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.bar-text {
  font-size: 24rpx;
  color: #666;
}

.bar-right {
  display: flex;
  align-items: center;
}

.buy-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx !important;
  font-size: 30rpx !important;
  margin-right: 20rpx;
  background-color: #ff4757 !important;
  border: none !important;
  color: #fff !important;
}

.add-cart-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx !important;
  font-size: 30rpx !important;
  background-color: #fff !important;
  border: 2rpx solid #ff4757 !important;
  color: #ff4757 !important;
}
