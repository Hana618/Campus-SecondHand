<!-- 商品详情页 -->
<!--pages/detail/detail.wxml-->
<view class="container">
  <!-- 商品图片轮播 -->
  <view class="swiper-container">
    <swiper indicator-dots="{{true}}" autoplay="{{false}}" interval="5000" duration="500" circular="{{true}}">
      <swiper-item>
        <image src="/images/others/default-goods-image.png" mode="aspectFill"></image>
      </swiper-item>
      <swiper-item>
        <image src="/images/others/default-goods-image.png" mode="aspectFill"></image>
      </swiper-item>
      <swiper-item>
        <image src="/images/others/default-goods-image.png" mode="aspectFill"></image>
      </swiper-item>
    </swiper>
  </view>
  
  <!-- 商品基本信息 -->
  <view class="goods-info">
    <text class="goods-title">二手教材 - 高等数学（上册）</text>
    <text class="goods-price">¥45.00</text>
    <view class="goods-meta">
      <text class="meta-item">
        <text class="meta-label">浏览</text>
        <text class="meta-value">128</text>
      </text>
      <text class="meta-item">
        <text class="meta-label">收藏</text>
        <text class="meta-value">32</text>
      </text>
      <text class="meta-item">
        <text class="meta-label">发布时间</text>
        <text class="meta-value">2024-05-15</text>
      </text>
    </view>
  </view>
  
  <!-- 商品详情描述 -->
  <view class="goods-detail">
    <view class="section-title">商品详情</view>
    <view class="detail-content">
      <text class="detail-text">商品描述：二手高等数学教材，九成新，无笔记，适合大一新生使用。</text>
      <text class="detail-text">商品成色：九成新</text>
      <text class="detail-text">所在校区：主校区</text>
      <text class="detail-text">交易方式：支持自取和指定地点</text>
    </view>
  </view>
  
  <!-- 发布者信息 -->
  <view class="publisher-info">
    <view class="section-title">发布者信息</view>
    <view class="publisher-card">
      <view class="publisher-avatar">
        <image src="/images/others/avatar.png" mode="aspectFill"></image>
      </view>
      <view class="publisher-meta">
        <text class="publisher-name">小明同学</text>
        <text class="publisher-stats">发布商品 28 | 已售 15</text>
      </view>
      <!-- <button class="contact-btn" type="primary" size="mini">联系卖家</button> -->
    </view>
  </view>
  
  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="bar-left">
      <view class="bar-item" bindtap="onCollect">
        <text class="bar-icon">❤️</text>
        <!-- 收藏前和收藏后图标变化 -->
        <!-- <view class="collect-button" bindtap="toggleCollect">
          <image src="{{isCollected ? '/images/collected.png' : '/images/collect.png'}}" />
        </view> -->
        
        <text class="bar-text">收藏</text>
      </view>
      <view class="bar-item" bindtap="onShare">
        <text class="bar-icon">📤</text>
        <text class="bar-text">分享</text>
      </view>
    </view>
    <view class="bar-right">
      <button class="buy-btn" type="primary" bindtap="onBuy">立即购买</button>
      <button class="add-cart-btn" type="default" bindtap="onAddCart">加入购物车</button>
    </view>
  </view>
</view>