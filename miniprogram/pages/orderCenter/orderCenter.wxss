/* 订单中心页面样式 */
.container {
  padding-bottom: 20rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.order-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

.order-list {
  padding: 0 30rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.shop-name {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
}

.order-content {
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.order-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.action-btn {
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #07c160;
  color: #07c160;
  padding: 0 24rpx;
  height: 50rpx;
  line-height: 50rpx;
}