<!-- 订单详情页面 -->
<view class="container">
  <view class="header">
    <text class="title">订单详情</text>
  </view>
  
  <!-- 订单状态信息 -->
  <view class="status-section">
    <text class="status-text">订单状态：待付款</text>
    <text class="status-desc">请在24小时内完成付款</text>
  </view>
  
  <!-- 订单信息 -->
  <view class="info-section">
    <view class="section-title">订单信息</view>
    <view class="info-item">
      <text class="info-label">订单编号：</text>
      <text class="info-value">{{orderId}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">创建时间：</text>
      <text class="info-value">2024-01-01 12:00:00</text>
    </view>
    <view class="info-item">
      <text class="info-label">支付方式：</text>
      <text class="info-value">微信支付</text>
    </view>
  </view>
  
  <!-- 商品信息 -->
  <view class="product-section">
    <view class="section-title">商品信息</view>
    <view class="product-item">
      <view class="product-info">
        <text class="product-title">商品名称示例</text>
        <text class="product-price">¥99.00</text>
      </view>
      <text class="product-count">x1</text>
    </view>
  </view>
  
  <!-- 收货地址 -->
  <view class="address-section">
    <view class="section-title">收货信息</view>
    <view class="address-info">
      <text class="address-user">张三 13800138000</text>
      <text class="address-detail">北京市海淀区中关村大街1号</text>
    </view>
  </view>
  
  <!-- 价格信息 -->
  <view class="price-section">
    <view class="price-item">
      <text class="price-label">商品总价：</text>
      <text class="price-value">¥99.00</text>
    </view>
    <view class="price-item">
      <text class="price-label">运费：</text>
      <text class="price-value">¥0.00</text>
    </view>
    <view class="price-item total">
      <text class="price-label">实付金额：</text>
      <text class="price-value total">¥99.00</text>
    </view>
  </view>
  
  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="total-price">
      <text>合计：</text>
      <text class="price">¥99.00</text>
    </view>
    <view class="action-buttons">
      <button class="btn-secondary" bindtap="cancelOrder">取消订单</button>
      <button class="btn-primary" bindtap="payOrder">立即支付</button>
    </view>
  </view>
</view>