/* 认证页样式 */
.container {
  /* display: flex; */
  margin-top: 150rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 40rpx;
}

.title {
  text-align: center;
  margin-bottom: 60rpx;
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.auth-form {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 90rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.input:focus {
  border-color: #07c160;
  background-color: #fff;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  line-height: 90rpx;
  margin: 0;
  margin-top: 20rpx;
}