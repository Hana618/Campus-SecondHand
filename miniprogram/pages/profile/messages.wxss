/* 消息列表页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-left,
.nav-right {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-btn {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
}

/* 消息列表 */
.message-list {
  flex: 1;
  overflow-y: auto;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.2s ease;
}

.message-item:active {
  background-color: #fafafa;
}

/* 消息头像 */
.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  position: relative;
}

.message-avatar image {
  width: 100%;
  height: 100%;
}

/* 未读消息标记 */
.unread-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background-color: #ff4444;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

/* 消息内容 */
.message-content {
  flex: 1;
  padding-top: 10rpx;
}

/* 消息头部 */
.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

/* 商品名称 */
.message-goods-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 消息时间 */
.message-time {
  font-size: 24rpx;
  color: #999;
}

/* 消息文本 */
.message-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 空消息提示 */
.empty-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 空消息图标 */
.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

/* 空消息文本 */
.empty-text {
  font-size: 28rpx;
  color: #999;
}
