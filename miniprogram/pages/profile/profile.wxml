<!-- 个人中心页 -->
<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <view class="user-avatar">
      <image src="/images/others/avatar.png" mode="aspectFill"></image>
    </view>
    <view class="user-meta">
      <text class="user-name">校园用户</text>
      <text class="user-id">ID: 123456</text>
    </view>
    <view class="edit-btn" bindtap="onEditProfile">编辑资料</view>
  </view>
  
  <!-- 统计信息区域 -->
  <view class="stats-section">
    <view class="stat-item" bindtap="onMyPublish">
      <text class="stat-number">28</text>
      <text class="stat-label">发布</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item" bindtap="onMySold">
      <text class="stat-number">15</text>
      <text class="stat-label">已售</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item" bindtap="onMyCollection">
      <text class="stat-number">12</text>
      <text class="stat-label">收藏</text>
    </view>
  </view>
  
  <!-- 功能入口列表 -->
  <view class="function-section">
    <view class="section-title">交易管理</view>
    <view class="function-list">
      <view class="function-item" bindtap="navigateToOrderCenter">
        <text class="function-icon">📋</text>
        <text class="function-text">订单中心</text>
        <text class="arrow">></text>
      </view>
      <view class="function-item" bindtap="onMyPublish">
        <text class="function-icon">📤</text>
        <text class="function-text">我的发布</text>
        <text class="arrow">></text>
      </view>
      <view class="function-item" bindtap="onMyCollection">
        <text class="function-icon">❤️</text>
        <text class="function-text">我的收藏</text>
        <text class="arrow">></text>
      </view>
      <view class="function-item" bindtap="onMyMessage">
        <text class="function-icon">💬</text>
        <text class="function-text">我的消息</text>
        <text class="arrow">></text>
        <view class="badge">3</view>
      </view>
    </view>
  </view>
  
  <!-- 其他功能 -->
  <view class="function-section">
    <view class="section-title">其他功能</view>
    <view class="function-list">
      <view class="function-item" bindtap="onSettings">
        <text class="function-icon">⚙️</text>
        <text class="function-text">设置</text>
        <text class="arrow">></text>
      </view>
      <view class="function-item" bindtap="onCustomerService">
        <text class="function-icon">👨💼</text>
        <text class="function-text">联系客服</text>
        <text class="arrow">></text>
      </view>
      <view class="function-item" bindtap="onAbout">
        <text class="function-icon">ℹ️</text>
        <text class="function-text">关于我们</text>
        <text class="arrow">></text>
      </view>
    </view>
  </view>
  
  <!-- 退出登录按钮 -->
  <view class="logout-btn" bindtap="onLogout">退出登录</view>
</view>