/* 个人中心页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 50rpx;
}

/* 用户信息区域样式 */
.user-info-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-meta {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.edit-btn {
  padding: 15rpx 30rpx;
  border: 2rpx solid #07c160;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #07c160;
}

/* 统计信息区域样式 */
.stats-section {
  background-color: #fff;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: #f0f0f0;
}

/* 功能区域样式 */
.function-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-list {
  padding: 10rpx 0;
  background-color: #fff;
}

.function-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.badge {
  position: absolute;
  right: 80rpx;
  background-color: #ff4757;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 退出登录按钮样式 */
.logout-btn {
  margin: 50rpx 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff4757;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
