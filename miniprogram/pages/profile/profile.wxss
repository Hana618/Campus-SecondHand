/* 个人中心页面样式 */
.container {
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-list {
  background-color: #fff;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}