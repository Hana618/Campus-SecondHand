/* 登录页样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0 40rpx;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 24rpx;
  color: #666;
}

.login-form {
  width: 80%;
}

.phone-login {
  width: 100%;
}

.input-group {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  height: 90rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-group.verify-code {
  justify-content: space-between;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.get-code-btn {
  background-color: #07c160 !important;
  color: #fff !important;
  font-size: 26rpx !important;
  padding: 0 !important;
  border-radius: 10rpx !important;
  line-height: 60rpx !important;
  height: 60rpx !important;
  margin: 0 !important;
  width: 150rpx !important;
  text-align: center !important;
  flex-shrink: 0;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  line-height: 90rpx;
  margin: 0;
  margin-bottom: 20rpx;
}
.wechat-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.divider-text {
  font-size: 24rpx;
  color: #999;
  padding: 0 30rpx;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background-color: #e5e5e5;
}

.wechat-login {
  width: 100%;
  margin-bottom: 40rpx;
}


.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.register-link {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.register-btn {
  color: #07c160;
  margin-left: 10rpx;
}